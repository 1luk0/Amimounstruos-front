<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbk"
    tools:context=".Screens.Login.LoginActivity">

  <ImageView
    android:id="@+id/imageView"
    android:layout_width="581dp"
    android:layout_height="253dp"
    android:layout_marginStart="120dp"
    android:layout_marginTop="129dp"
    android:layout_marginEnd="121dp"
    android:layout_marginBottom="130dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.647"
    app:srcCompat="@drawable/loginicon" />

  <EditText
    android:id="@+id/nameInput"
    android:layout_width="361dp"
    android:layout_height="85dp"
    android:layout_marginStart="245dp"
    android:layout_marginEnd="245dp"
    android:layout_marginBottom="62dp"
    android:background="@drawable/inputname"
    android:ems="10"
    android:hint="@string/hint_name"
    android:inputType="text"
    android:padding="20dp"
    android:textSize="30sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.501"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.942"
    android:fontFamily="@font/comfortaabold"/>

  <TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="140dp"
    android:text="@string/textlogin1"
    android:textColor="#F8F5F5"
    android:textSize="64sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.502"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:fontFamily="@font/comfortaabold"/>

  <TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/textlogin2"
    android:textColor="@color/white"
    android:textSize="34sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView"
    android:fontFamily="@font/comfortaabold"/>
</androidx.constraintlayout.widget.ConstraintLayout>
