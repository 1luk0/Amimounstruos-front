<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/apraguabk"
  tools:context=".Screens.Games.AprendamosAguaActivity">

  <!-- BotÃ³n de mapa (arriba a la izquierda) -->
  <ImageButton
    android:id="@+id/mapButton"
    android:layout_width="57dp"
    android:layout_height="52dp"
    android:background="@drawable/mapbutt"
    android:contentDescription="Mapa"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp" />

  <!-- Flecha roja (abajo a la derecha) -->
  <ImageButton
    android:id="@+id/continueArrow"
    android:layout_width="95dp"
    android:layout_height="59dp"
    android:background="@drawable/flecharoja"
    android:contentDescription="Continuar"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
