<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="200dp"
  android:background="@android:color/transparent"
  android:padding="0dp"
  android:layout_marginStart="0dp"
  android:layout_marginEnd="0dp"
  android:layout_marginLeft="0dp"
  android:layout_marginRight="0dp">

  <!-- Imagen del amimostruo -->

  <!-- Nombre del amigo -->

  <!-- BotÃ³n flecha -->

  <!-- Imagen divisoria (ocupa todo el ancho del recuadro) -->

  <ImageView
    android:id="@+id/imgAmimounstruo"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginStart="76dp"
    android:scaleType="centerCrop"
    android:src="@drawable/monster1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.27" />

  <TextView
    android:id="@+id/txtNombre"
    android:layout_width="841dp"
    android:layout_height="39dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="12dp"
    android:fontFamily="@font/comfortaabold"
    android:text="Nombre"
    android:textColor="#444444"
    android:textSize="26sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/btnAccion"
    app:layout_constraintHorizontal_bias="0.393"
    app:layout_constraintStart_toEndOf="@id/imgAmimounstruo"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.291" />

  <ImageButton
    android:id="@+id/btnAccion"
    android:layout_width="28dp"
    android:layout_height="28dp"
    android:layout_marginEnd="44dp"
    android:background="@android:color/transparent"
    android:contentDescription="Ver detalles"
    android:src="@drawable/flechawh"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.273" />

  <ImageView
    android:id="@+id/lineaDiv"
    android:layout_width="0dp"
    android:layout_height="8dp"
    android:layout_marginBottom="36dp"
    android:adjustViewBounds="true"
    android:scaleType="fitXY"
    android:src="@drawable/linea_div_amigos"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
