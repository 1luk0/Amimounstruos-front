<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Components.DialogPopUpActivity">

  <ImageView
    android:id="@+id/imageView3"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:scaleType="fitXY"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/opcidad"
    android:contentDescription="Fondo opaco" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_vertical_center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.5" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_horizontal_center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.5" />

  <ImageView
    android:id="@+id/deseassalir"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:src="@null"

  app:layout_constraintStart_toStartOf="@id/guideline_vertical_center"
  app:layout_constraintEnd_toEndOf="@id/guideline_vertical_center"
  app:layout_constraintTop_toTopOf="@id/guideline_horizontal_center"
  app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_center"
  android:contentDescription="Pop-up dinámico" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_vertical_button_center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.5" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_horizontal_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.78" />


  <ImageButton
    android:id="@+id/yesButton"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/yesbtn"
    android:contentDescription="Botón Sí"
    app:layout_constraintHeight_percent="0.17"
    app:layout_constraintWidth_percent="0.14"

    app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_button_center"
    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_button"
    app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal_button"
    android:layout_marginEnd="15dp" />

  <ImageButton
    android:id="@+id/noButton"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/nobtn"
    android:contentDescription="Botón No"
    app:layout_constraintHeight_percent="0.17"
    app:layout_constraintWidth_percent="0.14"

    app:layout_constraintStart_toEndOf="@+id/guideline_vertical_button_center"
    app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_button"
    app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal_button"
    android:layout_marginStart="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
