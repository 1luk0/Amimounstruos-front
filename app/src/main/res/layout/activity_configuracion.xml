<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/configuracionbk">

  <!-- Contenedor vertical de botones -->
  <LinearLayout
    android:id="@+id/botones_config"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="65dp"
    android:gravity="center">

    <ImageButton
      android:id="@+id/btn_notificaciones"
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:layout_marginTop="6dp"
      android:background="@drawable/notificaciones"
      android:contentDescription="Notificaciones" />

    <ImageButton
      android:id="@+id/btn_sonido"
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:layout_marginTop="6dp"
      android:background="@drawable/sonido"
      android:contentDescription="Sonido" />

    <ImageButton
      android:id="@+id/btn_ayuda"
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:layout_marginTop="6dp"
      android:background="@drawable/centroayuda"
      android:contentDescription="Centro de Ayuda" />

    <ImageButton
      android:id="@+id/btn_privacidad"
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:layout_marginTop="6dp"
      android:background="@drawable/ajuspriv"
      android:contentDescription="Privacidad" />

    <ImageButton
      android:id="@+id/btn_cerrar_sesion"
      android:layout_width="200dp"
      android:layout_height="40dp"
      android:layout_marginTop="6dp"
      android:background="@drawable/cerrarsesion"
      android:contentDescription="Cerrar sesión" />
  </LinearLayout>




  <!-- Barra inferior organizada -->
  <LinearLayout
    android:id="@+id/barra_inferior"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginBottom="20dp"
    android:paddingHorizontal="16dp"
    android:baselineAligned="false"
    android:weightSum="3">

    <ImageButton
      android:id="@+id/btn_map"
      android:layout_width="0dp"
      android:layout_height="60dp"
      android:layout_weight="1"
      android:background="@null"
    android:contentDescription="Mapa" />

    <ImageView
      android:id="@+id/image_menu"
      android:layout_width="0dp"
      android:layout_height="50dp"
      android:layout_weight="1"
      android:src="@drawable/menu"
      android:contentDescription="Decoración"
      android:scaleType="fitCenter" />

    <ImageButton
      android:id="@+id/btn_perfil"
      android:layout_width="0dp"
      android:layout_height="60dp"
      android:layout_weight="1"
      android:background="@null"
      android:src="@drawable/perfil"
      android:contentDescription="Perfil" />
  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
