<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/amigosbk">

  <!-- Panel blanco con opacidad -->
  <LinearLayout
    android:id="@+id/fondoPanel"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="24dp"
    android:orientation="vertical"
    android:background="@drawable/background_panel"
    android:padding="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- TÃ­tulo -->
    <TextView
      android:id="@+id/textTitulo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Mis amigos"
      android:textColor="#000000"
      android:textStyle="bold"
      android:textSize="20sp"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="12dp"/>



    <!-- Contenedor de items -->
    <LinearLayout
      android:id="@+id/listaAmigos"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"/>
  </LinearLayout>

  <ImageButton
    android:id="@+id/AgregarAmigosButton"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_gravity="top|start"
    android:background="@drawable/agregaramigosbtn"
    android:contentDescription="@string/mapa"
    app:layout_constraintHeight_percent="0.06"
    app:layout_constraintStart_toStartOf="@+id/guideline179"
    app:layout_constraintTop_toTopOf="@+id/guideline188"
    app:layout_constraintWidth_percent="0.4" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline179"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_begin="0dp"
    app:layout_constraintGuide_percent="0.29" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline188"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_begin="0dp"
    app:layout_constraintGuide_percent="0.86" />
</androidx.constraintlayout.widget.ConstraintLayout>
