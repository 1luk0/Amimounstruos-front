<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <!-- 🔐 Permiso para acceso a internet -->
  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:allowBackup="true"
    android:dataExtractionRules="@xml/data_extraction_rules"
    android:fullBackupContent="@xml/backup_rules"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.Amimounstruos"
    android:networkSecurityConfig="@xml/network_security_config"
    tools:targetApi="31">

    <!-- ✅ Ahora esta es la pantalla que se abre al iniciar -->
    <activity
      android:name=".Screens.Login.MainActivity"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <!-- Las demás actividades quedan sin el intent-filter -->
    <activity
      android:name=".Screens.MapActivity"
      android:exported="false" />
    <activity
      android:name=".Screens.Login.SelectCharacterActivity"
      android:exported="false" />
    <activity
      android:name=".Screens.Login.LoginActivity"
      android:exported="false" />
    <activity
      android:name=".Screens.Configurations.configuracionActivity"
      android:exported="true" />
    <activity android:name=".Screens.Games.AprendamosAguaActivity"
      android:exported="true" />
    <activity android:name=".Screens.Games.HistoriaAguaActivity"
      android:exported="true" />
    <activity android:name=".Screens.Games.GuardianAguaActivity"
      android:exported="true"/>
    <activity android:name=".Screens.Configurations.AjustesPrivacidadActivity"
      android:exported="true"/>
    <activity android:name=".Screens.Configurations.NotificacionesActivity"
      android:exported="true" />
    <activity android:name=".Screens.Configurations.CentroAyudaActivity"
      android:exported="true" />

  </application>

</manifest>
